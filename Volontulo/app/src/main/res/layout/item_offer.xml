<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/offer_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/offer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_avatar"
            android:textAppearance="?android:attr/textAppearanceListItem"
            tools:text="Offer name" />

        <TextView
            android:id="@+id/offer_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_name"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            tools:text="Offer place" />

        <TextView
            android:id="@+id/offer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/offer_place"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            tools:text="7 April 2016, 00:00" />

    </RelativeLayout>
</android.support.v7.widget.CardView>